							com.vividsolutions.jts.geom;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.geom.impl;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.geom.prep;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.geom.util;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.geomgraph;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.geomgraph.index;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.index;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.index.bintree;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.index.chain;version="[1.10.0,1.12.0]",
