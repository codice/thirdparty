							com.vividsolutions.jts.index.quadtree;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.index.strtree;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.index.sweepline;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.io;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.io.gml2;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.linearref;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.noding;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.noding.snapround;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.operation;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.operation.buffer;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.operation.buffer.validate;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.operation.distance;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.operation.linemerge;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.operation.overlay;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.operation.overlay.snap;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.operation.overlay.validate;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.operation.polygonize;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.operation.predicate;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.operation.relate;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.operation.union;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.operation.valid;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.planargraph;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.planargraph.algorithm;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.precision;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.simplify;version="[1.10.0,1.12.0]",
							com.vividsolutions.jts.util;version="[1.10.0,1.12.0]",
							org.apache.xml.serialize,
							org.apache.html.dom,
							org.apache.wml.dom,
							org.apache.wml,
							org.apache.xerces.parsers,
							org.apache.xerces.impl.dtd.models,
							org.apache.xerces.xni.parser,
							org.apache.xerces.impl.dv.xs,
							org.apache.xerces.impl.xs.traversers,
							org.apache.xerces.util,
							org.apache.xerces.impl.dtd,
							org.apache.xerces.jaxp.validation,
							org.apache.xerces.dom3.as,
							org.apache.xerces.impl.dv,
							org.apache.xerces.jaxp,
							org.apache.xerces.jaxp.datatype,
							org.apache.xerces.impl.xpath.regex,
							org.apache.xerces.xni,
							org.apache.xerces.impl.msg,
							org.apache.xerces.impl.dv.util,
							org.apache.xerces.impl.xs.util,
							org.apache.xerces.dom,
							org.apache.xerces.dom.events,
							org.apache.xerces.impl.xs.opti,
							org.apache.xerces.impl,
							org.apache.xerces.xs,
							org.apache.xerces.impl.io,
							org.apache.xerces.xpointer,
							org.apache.xerces.impl.dv.dtd,
							org.apache.xerces.xinclude,
							org.apache.xerces.impl.xpath,
							org.apache.xerces.xs.datatypes,
							org.apache.xerces.impl.xs.identity,
							org.apache.xerces.impl.xs.models,
							org.apache.xerces.xni.grammars,
							org.apache.xerces.impl.xs,
							org.apache.xerces.impl.validation,
							javax.xml.datatype,
							javax.xml.namespace,
							javax.xml.parsers,
							javax.xml.transform,
							javax.xml.transform.dom,
							javax.xml.transform.sax,
							javax.xml.transform.stream,
							org.w3c.dom,
							org.picocontainer;version="1.2",
							javax.vecmath;version="[1.3.2,1.4)",
							javax.measure;version="[1.0-beta-2,1.0-beta-2]",
							javax.measure.converter;version="[1.0-beta-2,1.0-beta-2]",
							javax.measure.quantity;version="[1.0-beta-2,1.0-beta-2]",
